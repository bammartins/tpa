<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Occurrence.
    -->
    <changeSet id="20190903141412-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="occurrence_ti_id"
                                 baseTableName="occurrence"
                                 constraintName="fk_occurrence_occurrence_ti_id"
                                 referencedColumnNames="id"
                                 referencedTableName="occurrence_ti"/>

        <addForeignKeyConstraint baseColumnNames="occurrence_treatment_id"
                                 baseTableName="occurrence"
                                 constraintName="fk_occurrence_occurrence_treatment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="occurrence_treatment"/>

        <addForeignKeyConstraint baseColumnNames="situation_id"
                                 baseTableName="occurrence"
                                 constraintName="fk_occurrence_situation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="situation"/>

        <addForeignKeyConstraint baseColumnNames="complement_id"
                                 baseTableName="occurrence"
                                 constraintName="fk_occurrence_complement_id"
                                 referencedColumnNames="id"
                                 referencedTableName="complement"/>

    </changeSet>
</databaseChangeLog>
